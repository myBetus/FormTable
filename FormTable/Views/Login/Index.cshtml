@model FormTable.Areas.Yonetim.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Giriş Yap - Yonetim Paneli</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="author" content="Betül AVCI" />
    <link rel="icon" href="~/Scripts/lorem.jpg" type="image/jpeg" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet" />
    @*<link rel="stylesheet" type="text/css" href="~/css/style.css" />*@
    <link href="~/Areas/Yonetim/assets/css/style.css" rel="stylesheet" />
</head>
<body>
    <div class="auth-wrapper" style="background: #444040!important">
        <div class="auth-content">
            <div class="card">
                <div class="row align-items-center text-center">
                    <div class="col-md-12">
                        <div class="card-body">
                            <img src="~/Scripts/lorem.jpg" alt="Yonetim Paneli" style="width: 150px" />
                            <h4 class="mb-3 f-w-400">Giriş Yap</h4>
                            @using (Html.BeginForm("GirisYap", "Login", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group mb-3">
                                    @Html.LabelFor(x => x.KullaniciAdi, "Kullanıcı Adı", new { @class = "floating-label" })
                                    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", required = true })
                                    @Html.ValidationMessageFor(x => x.KullaniciAdi, "", new { @class = "text-c-red" })
                                </div>
                                <div class="form-group mb-4">
                                    @Html.LabelFor(x => x.Sifre, "Şifre", new { @class = "floating-label" })
                                    @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", required = true, @type = "password" })
                                    @Html.ValidationMessageFor(x => x.Sifre, "", new { @class = "text-c-red" })
                                </div>
                                <button type="submit" class="btn btn-block btn-yonetim mb-4">Giriş Yap</button>
                                <hr />
                                @Html.ValidationMessage("KullaniciYok", new { @class = "text-c-red" })
                            }
                            <div class="row">
                                <div class="col-md-12">
                                    <p class="text-inverse text-left m-b-0">
                                        Geliştiren : BETÜL AVCI - @DateTime.Now.Year
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Areas/Yonetim/assets/js/vendor-all.min.js"></script>
    <script src="~/Areas/Yonetim/assets/js/plugins/bootstrap.min.js"></script>
    <script src="~/Areas/Yonetim/assets/js/ripple.js"></script>
    <script src="~/Areas/Yonetim/assets/js/pcoded.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.form-control').on('blur', function () {
                if ($(this).val().length > 0) {
                    $(this).addClass("fill");
                } else {
                    $(this).removeClass("fill");
                }
            });
            $('.form-control').on('focus', function () {
                $(this).addClass("fill");
            });
        });
        function butonYukleniyor(buttonid) {
            $("#" + buttonid).html("");
            $("#" + buttonid).prepend('<i id="BtnLoadingLogin" class="fas fa-redo fa-spin" style="display: none;"></i>&nbsp; LÜTFEN BEKLEYİNİZ...');
            $("#BtnLoadingLogin").show();
            $('#' + buttonid).prop('disabled', true);
        }
    </script>
</body>
</html>

